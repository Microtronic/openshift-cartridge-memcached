#!/bin/bash

source $OPENSHIFT_CARTRIDGE_SDK_BASH

echo "MEMCACHED_CLUSTER_ADD=$OPENSHIFT_MEMCACHED_USERNAME/$OPENSHIFT_MEMCACHED_PASSWORD/$OPENSHIFT_GEAR_DNS:$OPENSHIFT_MEMCACHED_PROXY_PORT"
{
echo hook-pub: `date`
for ((i=0;$#>0;i++)); do
	echo " $i: $1"
	shift
done
} >> $OPENSHIFT_DATA_DIR/hook-pub
